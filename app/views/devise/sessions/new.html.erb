<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

    <%= f.input :email %>
    <%= f.input :password %>


    <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <%= f.submit "Sign in", :class => 'btn btn-primary' %>
<% end %>

<%= render "links" %>